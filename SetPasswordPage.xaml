<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MyMauiApp.SetPasswordPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#FFB800">

    <Grid RowDefinitions="Auto,*">
        <!-- Top Section with Back Button and Logo -->
        <Grid Grid.Row="0" RowDefinitions="Auto,Auto" Padding="20,40,20,0">
            <!-- Back Button -->
            <Button 
                Grid.Row="0"
                Text="â†"
                FontSize="24"
                BackgroundColor="Transparent"
                TextColor="White"
                HeightRequest="40"
                WidthRequest="40"
                Padding="0"
                HorizontalOptions="Start"
                Clicked="OnBackClicked"/>

            <!-- Logo and Title -->
            <HorizontalStackLayout 
                Grid.Row="0"
                Spacing="15"
                HorizontalOptions="Center"
                VerticalOptions="Center">
                <Image 
                    Source="login_logo.png"
                    HeightRequest="80"
                    WidthRequest="80"/>
                <VerticalStackLayout Spacing="0">
                    <Label 
                        Text="INVENTORY"
                        TextColor="White"
                        FontSize="22"
                        FontAttributes="Bold"/>
                    <Label 
                        Text="SYSTEM"
                        TextColor="White"
                        FontSize="22"
                        FontAttributes="Bold"/>
                </VerticalStackLayout>
            </HorizontalStackLayout>

            <!-- Sign Up Title -->
            <Label 
                Grid.Row="1"
                Text="Sign Up"
                TextColor="White"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Margin="0,20,0,20"/>
        </Grid>

        <!-- White Background Section with Top Rounded Corners -->
        <Border Grid.Row="1"
                BackgroundColor="White"
                StrokeThickness="0">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="30,30,0,0"/>
            </Border.StrokeShape>
            
            <Grid RowSpacing="20" Padding="24,30,24,0">
                <VerticalStackLayout Spacing="20">
                    <Label 
                        Text="Set Password"
                        TextColor="#0066CC"
                        FontSize="18"
                        FontAttributes="Bold"/>

                    <!-- Password -->
                    <VerticalStackLayout Spacing="8">
                        <Label 
                            Text="Password"
                            TextColor="#0066CC"
                            FontSize="14"
                            FontAttributes="Bold"/>
                        <Grid BackgroundColor="#F5F5F5" HeightRequest="40">
                            <Entry 
                                x:Name="PasswordEntry"
                                Placeholder="Enter password"
                                IsPassword="{Binding IsPasswordHidden}"
                                BackgroundColor="Transparent"
                                HeightRequest="40"/>
                            <Button
                                Grid.Column="1"
                                x:Name="ShowPasswordButton"
                                Text="ðŸ‘"
                                FontSize="20"
                                HeightRequest="40"
                                WidthRequest="40"
                                Margin="0"
                                Clicked="OnShowPasswordClicked"
                                BackgroundColor="Transparent"
                                VerticalOptions="Center"
                                HorizontalOptions="End"/>
                        </Grid>
                    </VerticalStackLayout>

                    <!-- Confirm Password -->
                    <VerticalStackLayout Spacing="8">
                        <Label 
                            Text="Confirm Password"
                            TextColor="#0066CC"
                            FontSize="14"
                            FontAttributes="Bold"/>
                        <Grid BackgroundColor="#F5F5F5" HeightRequest="40">
                            <Entry 
                                x:Name="ConfirmPasswordEntry"
                                Placeholder="Confirm password"
                                IsPassword="{Binding IsConfirmPasswordHidden}"
                                BackgroundColor="Transparent"
                                HeightRequest="40"/>
                            <Button
                                Grid.Column="1"
                                x:Name="ShowConfirmPasswordButton"
                                Text="ðŸ‘"
                                FontSize="20"
                                HeightRequest="40"
                                WidthRequest="40"
                                Margin="0"
                                Clicked="OnShowConfirmPasswordClicked"
                                BackgroundColor="Transparent"
                                VerticalOptions="Center"
                                HorizontalOptions="End"/>
                        </Grid>
                    </VerticalStackLayout>

                    <Button 
                        Text="SIGN UP"
                        BackgroundColor="#FFB800"
                        TextColor="White"
                        CornerRadius="8"
                        HeightRequest="45"
                        Margin="0,10,0,30"
                        Clicked="OnSignUpClicked"/>
                </VerticalStackLayout>
            </Grid>
        </Border>
    </Grid>
</ContentPage>