<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyMauiApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyMauiApp"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <ShellContent
        Route="SplashPage"
        ContentTemplate="{DataTemplate local:SplashPage}" />
    
    <ShellContent
        Route="MainPage"
        ContentTemplate="{DataTemplate local:MainPage}" />
    
    <ShellContent
        Route="LoginPage"
        ContentTemplate="{DataTemplate local:LoginPage}" />

    <ShellContent
        Route="LoginFormPage"
        ContentTemplate="{DataTemplate local:LoginFormPage}" />
        
    <ShellContent
        Route="SignUpPage"
        ContentTemplate="{DataTemplate local:SignUpPage}" />
        
    <ShellContent
        Route="SetPasswordPage"
        ContentTemplate="{DataTemplate local:SetPasswordPage}" />
</Shell>